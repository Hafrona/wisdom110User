
header .top{
  height: 100rpx;
  width: 100%;
  background: #0082d6;
  padding: 0 30rpx;
  box-sizing: border-box;
}
header .top text{
  color: #ffffff;
}
header .top image{
  width: 50rpx;
  height: 50rpx;
}
.userInfo{
  position: relative;
  padding: 30rpx 0;
}
.portrait{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 1px solid #cccccc;
  text-align: center;
  padding: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 0 10rpx #acacac;
}
.content{
  padding: 0 12rpx;
  min-height: 1200rpx;
}
.portrait image{
  width: 100%;
  height: 100%;
}
.userName{
  margin: 15rpx 0;
  width: 100%;
}
.userName text{
  min-width:120rpx; 
  text-align: center;
}
.userName .line{
  height: 2px;
  background: #f1f1f1;
  width: 100%;
}
/* 时间轴 */
 .time-list{
   padding: 0 40rpx;
 }
 .list-cell-line{
  height: 200rpx;
  border-left: 1px solid #888888;
 }
.list-cell-circle{
  width: 10rpx;
  height: 10rpx;
  background: #757575;
  border-radius: 50%;
  margin-left: -4rpx;
}
.list-cell-blue-circle{
  width: 10rpx;
  height: 10rpx;
  background: #0082d6;
  border-radius: 50%;
  margin-left: -3rpx;
}
.list-cell-box{
  position: relative;
  height: 100%;
  padding: 0 20rpx;
}
.startTime{
  position: absolute;
  top: -20rpx;
  font-size: 28rpx;
  color: #b3b3b3;
}
.endTime{
  position: absolute;
  bottom: -20rpx;
  font-size: 28rpx;
  color: #b3b3b3;
}
.clockIn,.clockOut{
  font-size: 26rpx;
  color: #757575;
  margin-left: 10rpx;
  margin-top: -10rpx;
}
.clockStartTime,.clockEndTime{
  padding: 30rpx 0;
}
.clockStartTime text,.clockEndTime text{
  font-weight: bold;
  font-size: 32rpx;
}
.cardAddress text{
  font-size: 28rpx;
  color: #b3b3b3;
  margin-left: 5rpx;
}
 .cardInfo .address image,.currentAddress image,.cardAddress image{
  width: 30rpx;
  height: 30rpx;
}
.carBtn{
  margin: 40rpx 0;
}
.carBtn .btn{
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle at 100px 100px, #5cabff, #0082d6);
  border-radius: 50%;
  text-align: center;
  box-shadow: 0 4rpx 8rpx #8dcdf8;
  line-height: 1.4;
}
.carBtn .btn text{
  color: #ffffff;
}
.cardTime{
  font-size: 26rpx;
  color: #f1f1f1!important;
}
.currentAddress{
  margin-top: 15rpx;
}
.currentAddress text{
  font-size: 28rpx;
  color: #acacac;
}
.currentAddress .location{
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #0082d6;
}

/* 时间选择器 */
.datePicker{
  position: absolute;
  top:80rpx;
  right: 40rpx;
  font-size: 28rpx;
  color: #888888;
}
.picker image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 5rpx;
}
/* 底部导航 */
.tabBar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  min-height: 100rpx;
}
.tab{
  position: relative;
  background: #dcdee2;
  min-height: 110rpx;
  padding: 10rpx 60rpx;
  box-sizing: border-box;
  box-shadow: 0 0 5rpx #757575;
}
.tab .tab-item{
  border-left: 1px solid #949494;
  padding: 0 12rpx;
  box-sizing: border-box;
  width: 100%;
}
.tab .tab-item:nth-child(3){
  border-right: 1px solid #949494;
}
.tab .tab-item image{
  width: 40rpx;
  height: 40rpx;
  padding: 8rpx 0;
}
.tab .tab-item text{
  font-size: 24rpx;
  color: #949494;
}
.tab .dot{
  position: absolute;
  right: 15rpx;
  top: 40rpx;
}
.tab .dot image{
  width: 30rpx;
  height: 30rpx;
}