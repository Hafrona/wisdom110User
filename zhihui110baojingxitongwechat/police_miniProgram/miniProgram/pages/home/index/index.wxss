/**index.wxss**/
.container .mapContent{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}
.container .mapContent map{
  width: 100%;
  height: 100%
}
.header{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  min-height: 80rpx;
  line-height: 80rpx;
  background: #d2d9e3;
  box-shadow:  0 0 5rpx 0 #d2d9e3 inset;
  z-index: 999;
}
.header .personal{
  position: absolute;
  top: 15rpx;
  left: 30rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 1000;
}
.header .personal image{
  width: 100%;
  height: 100%;
}
.header .address{
  text-align: center;
  font-size: 28rpx;
  color: #5e5e5e;
}
.header .address image{
  position: absolute;
  top: 15rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 左侧菜单栏 */
.personalNav{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  width: 400rpx;
  height: 100vh;
  background: #ffffff;
  z-index: 1001;
}
.personalNav .top{
  margin-bottom: 50rpx;
}
.personalNav .headPortrait{
  width: 110rpx;
  height: 110rpx;
  margin: 20rpx 0;
  border: 1px solid #ccc;
  border-radius: 50%;
  box-shadow: 0 0 10rpx #ccc;
}
.personalNav .headPortrait image{
  width: 100%;
  height: 100%;
  padding: 15rpx;
  box-sizing: border-box;
}
.personalNav .info .p_name text{
  padding: 0 15rpx;
  font-size: 30rpx;
}
.personalNav .info .p_name::before{
  content: '';
  display: inline-block;
  border: 1rpx solid #e0e0e0;
  width: 135rpx;
  vertical-align: middle;
}
.personalNav .info .p_name::after{
  content: '';
  display: inline-block;
  border: 1rpx solid #e0e0e0;
  width: 135rpx;
  vertical-align: middle;
}
.personalNav .info .level{
  text-align: center;
  font-size: 24rpx;
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  margin-top: 12rpx;
}
.personalNav .info .level::before{
  content:'★';
  color: rgb(255, 166, 0);
  font-size: 34rpx;
  vertical-align: middle;
}
.personalNav .info .level::after{
  content:'★';
  color: rgb(255, 166, 0);
  font-size: 32rpx;
  vertical-align: middle;
}
.personalNav .info .level text{
  padding: 8rpx;
}
.personalNav .menu{
  width: 100%;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  line-height: 2.8;
  font-size: 28rpx;
  color: #888888;
}
.personalNav .menu li{
  display: flex;
  align-items: center;
}
.personalNav .menu li image{
  width: 30rpx;
  height: 30rpx;
  padding-right: 15rpx;
}
.personalNav .bottom{
  width: 100%;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #808080;
  text-align: center;
}

.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}
.footer .message{
  height: 100rpx;
  width: 100%;
  background: #cdd5e0;
  border: 1px solid #c0c0c0;
  padding: 10rpx 0;
}
.footer .message .icon{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  border-right: 1px solid #797979;
}
.footer .message text{
  padding: 0 12rpx;
  color: #797979
}

.footer .message .icon image{
  width: 60%;
  height: 60%;
  padding: 20rpx;
}
.footer .bottom_btn{
  text-align: center;
  color: #ffffff;
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #0082d6;
  box-shadow: 0 0 10rpx #1a6496 inset;
}
