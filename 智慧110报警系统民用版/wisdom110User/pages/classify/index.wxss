/* pages/classify/index.wxss */
.classify{
  padding:20rpx;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.case-type:nth-child(odd){
  border-right: 4rpx solid #eceff4;
}
.case-type{
  width: 50%;
  height:25%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 4rpx solid #eceff4;
  box-sizing: border-box;
}
.case-type:hover{
  color: #2594dc;
  background-color: #eceff4;
}
.case-type icon{
  width: 140rpx;
  height:140rpx;
  background-color: #666;
}
.case-type text:nth-child(3){
  transform: rotate(180deg)
}
.particulars-mask{
  position: absolute;
  top:0;
  left:0;
  z-index: 100;
  width: 100vw;
  height: 100vh;
  background-color: rgba( 0, 0, 0, .3);
  display: flex;
  align-items: center;
  justify-content: center;
}
.particulars{
  z-index: 1000;
  background-color: #fff;
  width: 90%;
  height: 45%;
  border-radius: 10rpx;
  padding: 10rpx 10rpx;
}
.particulars-title{
  display: flex;
  justify-content: center;
  align-items: center;
  color:#fff;
  font-weight: 600;
  height: 15%;
  align-content: center;
  border-radius: 10rpx;
  background-color: #0f88d7;
  margin-bottom: 10rpx;
}
.particulars-content{
  height: 85%;
  position: relative;
}
.particulars-form{
  height: 90%;
}
.form-call,.locale{
  background-color: #eceff4;
  display: flex;
  height:15%;
  margin-bottom: 10rpx;
  padding-left:20rpx;
  border:2rpx solid #ededed;
  border-radius: 10rpx;
}
.form-location text{
  width: 20%;
}
.form-location input{
  width: 55%;
}
.frequently-location{
  color:#08bb5d;
  margin-right: 0 !important;
}
.frequently-location:hover{
  background-color: #ededed;
  border-radius: 15rpx;
}
.form-call:nth-child(even){
  background-color: #fff;
}
.form-call input{
  height: 100%;
  display: flex;
  align-items: center;
  color:#707f92;
}
.form-call text,.locale text{
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  font-size: 32rpx;
}
.locale{
  position: relative;
}
.locale text:nth-child(4){
  position: absolute;
  top:0;
  right:0;
}
.particulars-formBtn {
  width: 200rpx;
  height: 60rpx;
  padding:0;
  display: flex;
  background-color: #42ce85;
  justify-content: center;
  align-items: center;
  color: #fff;
  position:absolute;
  bottom:10rpx;
  left:240rpx;
}