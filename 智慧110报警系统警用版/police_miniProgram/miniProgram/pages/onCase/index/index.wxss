header .top{
  height: 100rpx;
  width: 100%;
  background: #0082d6;
  padding: 0 30rpx;
  box-sizing: border-box;
}
header .top image{
  width: 50rpx;
  height: 50rpx;
}

/* 内容部分 */
.main{
  padding: 0 10rpx;
  box-sizing: border-box;
}

/* 警察信息 */
.main .personInfo{
  width: 100%;
  border:1px solid #f1f1f1;
  margin: 12rpx 0;
  border-radius: 10rpx;
  box-shadow: 0 8rpx 8rpx #e2e2e2;
  padding: 12rpx 0;
}
.main .personInfo .personAvatar{
  width: 110rpx;
  height: 110rpx;
  border:1px solid #cccccc;
  border-radius: 50%;
  padding: 10rpx;
  margin: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 0 8rpx #cccccc;
}
.main .personInfo .personAvatar image{
  width: 100%;
  height: 100%;
}
.main .personScore{
  margin-top: 20rpx;
}
.main .star-images{
  width: 40rpx;
  height: 40rpx;
  src: '../../../assets/images/empty_star.png'
} 
.main .evaluate{
  width: 100%;
  margin-top: 20rpx;
}
.main .evaluate .flex-box-v span{
  color: #ea9518;
  font-size: 36rpx;
  margin-top: 10rpx;
}

/* 案件列表 */
.main .case{
  border: 1px solid #f1f1f1;
  border-radius: 10rpx;
  box-shadow: 0 8rpx 8rpx #e2e2e2; 
  padding: 15rpx 0;
  box-sizing: border-box;
}
.main .case .li{
  padding: 20rpx 25rpx;
}
.main .case .li:nth-child(even){
  background: #eceff4;
}
.main .case .li image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid #f1f1f1;
  box-shadow: 0 8rpx 8rpx #e2e2e2; 
  padding: 10rpx;
  box-sizing: border-box;
}
.main .case .li .flex-box-v{
  margin-left: 20rpx;
}
.main .case .li .flex-1 text{
  font-size: 28rpx;
  color: #7e7e7e;
}
.main .case .li .caseType{
  color: #000000 !important;
  font-weight: bold;
}
.main .case .li .status{
  font-size: 30rpx;
  color: #ff0000;
  font-weight: bold;
}