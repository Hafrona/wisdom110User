.home {
  position: relative;
}

.heard {
  display: flex;
  height: 7vh;
  border-bottom: 1px solid #999;
  box-sizing: border-box;
  background-color: #d6dde7;
}

.heard-user {
  width: 43%;
  display: flex;
  align-items: center;
  padding-left: 50rpx;
  box-sizing: border-box;
}

.heard-user image {
  width: 60rpx;
  height: 100%;
}

.heard text {
  width: 57%;
  padding-left: 14rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.map_container {
  height: 85vh;
  width: 100%;
  position: relative;
}

.map {
  height: 100%;
  width: 100%;
}

.callPolice {
  width: 100%;
  display: flex;
  background-color: rgba(222, 227, 235, 0.9);
  height: 160rpx;
  align-items: center;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  padding-left: 70rpx;
  box-sizing: border-box;
}

.getPhone {
  background-color: #fff;
  display: flex;
  justify-content: center;
  width: 60vw;
  height: 60rpx;
  align-items: center;
  padding-right: 10rpx;
}

.getPhone input {
  background-color: #fff;
  padding-left: 20rpx;
  height: 100%;
  z-index: 10;
}

.getPhone button {
  height: 40rpx;
  width: 160rpx;
  padding: 0;
  font-size: 24rpx;
  line-height: 40rpx;
  background-color: #fef000;
  color: #999;
}

.callPoliceButton {
  height: 160rpx;
  width: 160rpx;
  margin: 0 20rpx;
  background-color: #ededed;
  position: absolute;
  bottom: 0;
  right: 0;
}

.footer {
  height: 8vh;
  background-color: #d7dee7;
  display: flex;
}

.footer-status {
  height: 100%;
  width: 15%;
  position: relative;
}

.footer-status::after {
  content: ' ';
  width: 2rpx;
  height: 80%;
  background-color: #999;
  position: absolute;
  top: 12rpx;
  right: 0;
}

.footer >text {
  width: 85%;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  padding-left: 20rpx;
}

.user {
  width: 100vw;
  height: 100vh;
  display: flex;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 20;
  /* animation: donghua 3s; */
}
/* @keyframes donghua {
  0%{width: 100vw;}
  100%{width: 100vh;}
} */

.user-mask {
  width: 45%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.user-nav {
  width: 55%;
  height: 100%;
  background-color: #fff;
}

.user-name {
  height: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.user-name image {
  height: 100rpx;
  width: 100rpx;
  background-color: #666;
  margin-bottom: 10rpx;
}

.operation {
  height: 100rpx;
  display: flex;
  align-items: center;
}

.nav-operation {
  width: 100%;
  height: 60%;
  display: flex;
  align-items: center;
  padding-left: 50rpx;
}

.nav-operation:hover {
  color: #0083d3;
}

.nav-operation text:nth-child(1) {
  margin-right: 10rpx;
  font-size: 28rpx;
}

.nav-operation text {
  font-size: 28rpx;
  display: flex;
  height: 100%;
  align-items: center;
}