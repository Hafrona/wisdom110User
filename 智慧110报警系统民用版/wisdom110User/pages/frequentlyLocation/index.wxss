.frequently-location{
  width: 100vw;
  height: 100vh;

}
.location-form{
  height: 86vh;
  padding:10rpx 10rpx 0;
}
.user-message{
  width: 100%;
  height: 40%;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.user-message .message-input{
  height: 20%;
  border-top:4rpx solid #ced5dd;
  padding: 0 20rpx;
  display: flex;

}
.message-input input{
  height: 100%;
  width: 85%;
}
.message-input text{
  width: 15%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user-message textarea{
  box-sizing: border-box;
  border-top: 4rpx solid #ced5dd;
  width: 100%;
  height: 40%;
  padding: 10rpx 20rpx;
}
.default{
  width: 100%;
  height: 20%;
  background-color: #fff;
}
.location-label{
  height: 50%;
  box-sizing: border-box;
  border-bottom: 4rpx solid #ced5dd;
  padding: 0 20rpx;
  display: flex;
}
.set-default{
  height: 50%;
  padding: 0 20rpx;
  display: flex;
}
.set-default text{
  width: 85%;
  display: flex;
  align-items: center;
}
.set-default switch{
  display: flex;
  align-items: center;
  width: 15%;
}