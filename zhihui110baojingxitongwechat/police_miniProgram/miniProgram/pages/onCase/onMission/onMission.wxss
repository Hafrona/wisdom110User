header .top{
  height: 100rpx;
  width: 100%;
  background: #0082d6;
  padding: 0 30rpx;
  box-sizing: border-box;
}
header .top text{
  color: #ffffff;
}
header .top image{
  width: 50rpx;
  height: 50rpx;
}


.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.bottom .carInfo{
  background: #dcdee2;
}
.bottom .carInfo .license{
  padding: 25rpx 20rpx;
}
.bottom .carInfo .number{
  font-size: 42rpx;
  margin-bottom: 10rpx;
}
.bottom .carInfo .name{
  font-size: 28rpx;
}
.bottom .carInfo .name .rate{
  margin-left: 30rpx;
}
/* 底部tab栏icon */
.tab{
  position: relative;
  background: #dcdee2;
  min-height: 110rpx;
  border-top: 1px solid #949494;
  padding: 10rpx 60rpx;
  box-sizing: border-box;
  box-shadow: 0 0 5rpx #757575;
}
.tab .tab-item{
  border-left: 1px solid #949494;
  padding: 0 12rpx;
  box-sizing: border-box;
  width: 100%;
}
.tab .tab-item:nth-child(5){
  border-right: 1px solid #949494;
}
.tab .tab-item image{
  width: 40rpx;
  height: 40rpx;
  padding: 8rpx 0;
}
.tab .tab-item text{
  font-size: 24rpx;
  color: #949494;
}
.tab .dot{
  position: absolute;
  right: 15rpx;
  top: 40rpx;
}
.tab .dot image{
  width: 30rpx;
  height: 30rpx;
}
/* 增援 */
.reinforce,.scene{
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -40%;
  margin-top: -40%;
  background: #ffffff;
  width: 80vw;
  border-radius: 15rpx;
  padding: 15rpx;
  z-index: 999;
}
.reinforce-title,.scene-title{
  background: #0082d6;
  text-align: center;
  color: #ffffff;
  padding: 12rpx 0;
  border-radius: 10rpx;
}
.li{
  padding: 10rpx 15rpx;
  border: 1px solid #eceff4;
  margin: 10rpx 0;
  border-radius: 10rpx;
}
.li:nth-child(odd){
  background: #eceff4;
}
.li text{
  margin-right: 18rpx;
  font-size: 30rpx;
}
.li input{
  font-size: 30rpx;
  margin-left: 20rpx;
}
.reinforce button{
  width: 180rpx;
  height: 60rpx;
  font-size: 25rpx;
}
.scene-info{
  margin-top: 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.image image,.video video{
  width: 100%;
  height: 300rpx;
}