@import "/app.wxss";
.identity-content{
  height: 86vh;
}
.personal-photo ,.identity-card,.user-message{
  height: 25%;
  padding:10rpx 40rpx; 
}
.personal-photo text,.identity-card text,.user-message>text{
  display: flex;
  height: 25%;
  align-items: center;
  color:#818ea1;
}
.upPhoto{
  height: 75%;
  display: flex;
}
.click-upPhoto{
  flex: 1;
  background-color: #fff;
  border:2rpx solid #adb9c7;
  margin-right: 20rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}
.upPhoto-icon{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.upPhoto-icon text{
  font-size: 80rpx;
}
.upPhoto-icon text:nth-child(3){
  font-size: 32rpx;
}
.preview-photo{
  flex: 1;
  border:2rpx solid #adb9c7;
  border-radius: 10rpx;
}
.preview-photo>image{
  width: 100%;
  height:100%;
}
.identity-card{
  height: 25%;
}
.user-message{
}
.identity-user-name,.identity-number{
  height: 25%;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
}
.user-name-checkbox,.identity-number-checkbox{
  width: 10%;
  height: 100%;
  display: flex;
  align-items: center;
}
.user-name-checkbox>checkbox,.identity-number-checkbox>checkbox{
}
.identity-number >input,.identity-user-name>input{
  width:90%;
  height: 100%;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
}