<view class='home'>
  <view class='heard'>
    <view class='heard-user'>
      <image src='../../static/images/username.png' mode='widthFix' bindtap='user'></image>
    </view>
    <text>莆田市</text>
  </view>
  <!-- 我的 -->
  <view class='user' animation="{{userAnimation}}" hidden='{{userShow}}'>
    <view class='user-nav'>
      <view class='user-name'>
        <image></image>
        <text>刘某</text>
      </view>
      <view class='operation' wx:for='{{userNav}}' wx:key='index'>
        <view class='nav-operation'>
          <text class='iconfont {{item.icon}}'></text>
          <text bindtap='NavIndex' data-index='{{index}}'>{{item.name}}</text>
        </view>
      </view>
    </view>
    <view class='user-mask' bindtap='maskEnter'>
    </view>
  </view>
  <view class="map_container">
    <map class="map" id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" show-location="true" markers="{{markers}}" bindmarkertap="makertap">
    </map>
    <!-- 获取用户手机号码 -->
    <view class='callPolice' style='display:none'>
      <view class='getPhone'>
        <input placeholder='请输入手机号!' placeholder-style='font-size:28rpx'></input>
        <button size='mini'>获取验证码</button>
      </view>
    </view>
    <view class='callPoliceButton' bindtap='callThePolice'>
    我要报警
    </view>
  </view>
  <!-- 底部 -->
  <view class='footer'>
    <view class='footer-status'>

    </view>
    <text>{{rgcData.address}}</text>
  </view>
</view>